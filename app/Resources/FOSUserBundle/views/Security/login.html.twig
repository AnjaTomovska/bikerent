{% extends 'base.html.twig' %}

{% block body %}

    <div class="container br-body-wrapper">
        <div class="row">

            <div class="col-xs-6 col-xs-offset-3">

                {% trans_default_domain 'FOSUserBundle' %}

                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                    {% endif %}
                    <div class="form-group">
                        <label for="username">{{ 'security.login.username'|trans }}</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}"
                               required="required"
                               class="form-control"/>

                    </div>

                    <div class="form-group">
                        <label for="password">{{ 'security.login.password'|trans }}</label>
                        <input type="password" id="password" name="_password" required="required" class="form-control"/>
                    </div>


                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="remember_me" name="_remember_me"
                                   value="on"/>{{ 'security.login.remember_me'|trans }}
                        </label>

                    </div>



                    <button type="submit" id="_submit" name="_submit"
                            class="btn btn-success br-btn-green ">{{ 'security.login.submit'|trans }}</button>
                    <div class="form-group" style="margin-top: 20px">
                        <label class="text-muted"> Don`t have account ? Click here to <a href="{{ path('fos_user_registration_register') }}" class="br-green-link">Sign Up </a></label>
                    </div>
                </form>

            </div>
        </div>

    </div>
{% endblock %}