{% extends 'base.html.twig' %}


{% block body %}

    <div class="container br-body-wrapper">
        <div class="row">

            <h2>My Favorite Bikes</h2>

            <table class="table table-striped table-hover">
                <thead>
                <tr>

                     <th>Brand </th> <th> Model </th> <th> Category </th> <th> Rent </th>
                </tr>
                </thead>

                <tbody>

                {%  if (favorites|length == 0) %}
                    <tr><td colspan="5" class="text-center">No bikes are added as favorites </td></tr>
                {% endif %}


                {%  for bike in favorites %}

                    <tr>

                        <td>{{ bike.brend }}</td>
                        <td>{{  bike.model }}</td>
                        <td>{{ bike.category.name }}</td>

                        <td> rent</td>



                    </tr>
                {%  endfor %}

                </tbody>

            </table>
        </div>
    </div>

{% endblock %}